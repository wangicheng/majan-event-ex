{
  "manifest_version": 3,
  "name": "透明麻將",
  "version": "1.0",
  "description": "Captures WebSocket messages and displays the last one in a side panel.",
  "permissions": ["activeTab", "scripting", "sidePanel"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://game.maj-soul.com/1/*"],
      "js": ["inject.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["websocket_override.js"],
      "matches": ["https://game.maj-soul.com/*"]
    }
  ]
}
